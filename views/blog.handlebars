<section class="blog-section">
    <h2 class="blog-title">{{title}}</h2>
    <h3 class="blog-subtitle">Written by {{user.username}} ID {{id}}</h3>

   <br>
    <p class="blog-content">{{content}}</p>


</section>

<hr>
<br>

{{#if logged_in}}

<form class="form-floating form" id="comment-form" data-blogid="{{id}}">
   <textarea class="form-control description-form" placeholder="Leave a comment here" id="floatingTextarea" required></textarea>
   <label for="floatingTextarea">Leave A Comment Here</label>
   <br>
   <button type="submit" class="btn btn-primary commentBTN">Submit</button>

</form>

{{/if}}

<br>

<section class="comment-section">
   <h2> Comments</h2>
      {{#each comments as |comment|}}
      <article class="card mb-3" style="max-width: 540px;">
         <div class="card-body">
            <p class="card-text" id="description">{{comment.description}}</p>
            <p class="card-text"><small class="text-muted">Written by {{comment.user.username}} on {{format_date comment.date_created}}</small></p>
         </div>
      </article>
      {{/each}}
</section>

<script src="/js/comment.js"></script>



  


   



 
 

 
