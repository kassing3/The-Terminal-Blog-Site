
    <h2> DASHBOARD</h2>
<!-- Loop over each object in the blogs array -->
{{#each blogs as |blog|}}

        <section class="row row-cols-1 g-4">

            <article class="col blog-listed" >
                <div class="card w-80">
                    <a href="/blog/{{blog.id}}" ><h5 class="card-header">{{blog.title}} </h5></a>
                    <section class="card-body">
                      <p class="card-text">{{blog.content}}</p>
                    </section>
                    <section class="card-footer text-musted">
                        Posted by {{blog.user.username}} on  {{format_date blog.date_created}}
                        <a href="/api/blogs/{{blog.id}}" class=" btn btn-secondary" >
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                            </svg>
                            Edit Blog
                        </a>
                        <button type="button"  data-id="{{blog.id}}" class="btn" id="btn-delete">Delete Blog</button>
                    </section>
                </div>

            </article>

            <br>

        </section>
{{/each}}

    <script src="/js/dashboard.js"></script>
    <script src="/js/tabs.js"></script>
    

