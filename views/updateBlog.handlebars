<h2>UPDATE BLOG</h2>

<form  id="update-blog-form" data-id="{{id}}">
    <div class="mb-3">
      <label for="blogTitle" class="form-label">Title</label>
      <input type="text" class="form-control" id="blogTitle" value="{{title}}">
    </div>
    <div class="mb-3">
      <label for="blogContent" class="form-label"> Content</label>
      <textarea class="form-control" id="blogContent" rows="4">{{content}}</textarea>
    </div>
    <br>
    <button type="submit" class="btn btn-primary createBTN">Update Blog</button>

</form>

<script src="/js/updateBlog.js"></script>

